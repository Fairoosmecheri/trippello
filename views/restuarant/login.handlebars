<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Restuarant Login</h2>
            <form action="/restuarant/login" method="POST">
            {{#if loginErr}}
                <p class="alert alert-danger">Invalid username or password</p>
            {{/if}}
                <div class="form-group my-2">
                    <label>Email Address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter Email">
                </div>
                <div class="form-group my-2">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter Password">
                </div>
                
                <button type="submit" class="btn btn-primary mx-auto">Login</button>
            </form>
        </div>
    </div>
</div>